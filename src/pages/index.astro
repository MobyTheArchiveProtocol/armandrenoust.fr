---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';

const accueilData = await getEntry('pages', 'accueil');
const { title, subtitle, ctaText, ctaLink, description } = accueilData.data;
---

<BaseLayout title="Accueil" description={description}>
    
    <section class="hero-wrapper">
        <div class="hero-glow"></div>

        <div class="hero">
            <div class="badge">
                <span class="dot"></span> Disponible pour de nouveaux projets
            </div>

            <h1>
                Un site web qui fonctionne.<br>
                <span class="text-gradient-orange">Simplement.</span>
            </h1>
            
            <p class="subtitle">{subtitle}</p>
            
            <div class="actions">
                <a href={ctaLink} class="btn-geist-primary">{ctaText}</a>
                <a href="/contact" class="btn-geist-secondary">Discutons (15min)</a>
            </div>
        </div>
    </section>

    <section class="grid-wrapper">
        <div class="grid-card">
            <div class="icon-box orange-box">‚ö°Ô∏è</div>
            <h3>Ultra Rapide</h3>
            <p>100/100 PageSpeed. Z√©ro Javascript inutile. L'instantan√©it√© comme standard.</p>
        </div>
        <div class="grid-card">
            <div class="icon-box orange-box">üõ°Ô∏è</div>
            <h3>Architecture S√©curis√©e</h3>
            <p>Jamstack & Headless. Une surface d'attaque r√©duite au strict minimum.</p>
        </div>
        <div class="grid-card">
            <div class="icon-box orange-box">/</div>
            <h3>Pragmatisme</h3>
            <p>Pas de jargon. Pas de vente forc√©e. Juste la bonne stack pour le bon besoin.</p>
        </div>
    </section>

</BaseLayout>

<style>
    .hero-wrapper {
        padding: 8rem 0 6rem;
        text-align: center;
        display: flex; justify-content: center; align-items: center;
        position: relative;
    }

    /* --- GLOW ADAPT√â AU DARK MODE --- */
    .hero-glow {
        position: absolute;
        top: 50%; left: 50%; transform: translate(-50%, -50%);
        width: 500px; height: 300px;
        /* Une lueur orange/rougeoyante diffuse */
        background: radial-gradient(circle, rgba(249, 115, 22, 0.15) 0%, rgba(0,0,0,0) 70%);
        filter: blur(80px);
        z-index: -1; pointer-events: none;
    }

    .hero { max-width: 900px; position: relative; }

    /* Badge Dark */
    .badge {
        display: inline-flex; align-items: center; gap: 0.5rem;
        background-color: rgba(255, 255, 255, 0.05); /* Blanc tr√®s transparent */
        border: 1px solid rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(4px);
        padding: 0.4rem 0.8rem; border-radius: 50px;
        font-size: 0.85rem; font-weight: 500;
        color: #ccc; /* Texte gris clair */
        margin-bottom: 1.5rem;
    }
    .dot {
        width: 6px; height: 6px; background-color: #22c55e;
        border-radius: 50%; box-shadow: 0 0 10px rgba(34, 197, 94, 0.5); /* Petit halo vert */
    }

    h1 {
        font-size: 4.5rem; font-weight: 800; letter-spacing: -0.04em;
        line-height: 1.1; margin-bottom: 1.5rem; color: #fff;
    }

    /* D√©grad√© Orange Intense */
    .text-gradient-orange {
        background: linear-gradient(to right, #f97316, #fb923c);
        -webkit-background-clip: text; -webkit-text-fill-color: transparent;
        /* Petit drop-shadow color√© pour faire ressortir le texte */
        filter: drop-shadow(0 0 20px rgba(249, 115, 22, 0.3)); 
    }

    .subtitle {
        font-size: 1.3rem; color: #888; max-width: 650px; margin: 0 auto 3rem;
        font-weight: 400;
    }

    /* BOUTONS DARK MODE */
    .actions { display: flex; gap: 1rem; justify-content: center; }

    .btn-geist-primary {
        background-color: #fff; color: #000; /* Bouton blanc sur fond noir = Impact max */
        height: 50px; padding: 0 2.5rem; display: inline-flex; align-items: center;
        border-radius: 6px; font-weight: 600; font-size: 1rem; border: 1px solid #fff;
        transition: all 0.2s ease; text-decoration: none;
    }
    .btn-geist-primary:hover {
        background-color: #ccc; border-color: #ccc; transform: translateY(-2px);
    }

    .btn-geist-secondary {
        background-color: transparent; color: #fff;
        height: 50px; padding: 0 2.5rem; display: inline-flex; align-items: center;
        border-radius: 6px; font-weight: 500; font-size: 1rem;
        border: 1px solid #333; /* Bordure sombre */
        transition: all 0.2s ease; text-decoration: none;
    }
    .btn-geist-secondary:hover { border-color: #fff; background-color: rgba(255,255,255,0.05); }

    /* GRID DARK */
    .grid-wrapper {
        display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;
        margin-top: 2rem; padding-bottom: 4rem;
    }

    .grid-card {
        border: 1px solid var(--border-subtle);
        background: var(--bg-card); /* Fond gris tr√®s fonc√© (#0a0a0a) */
        border-radius: 8px; padding: 2rem;
        transition: all 0.2s ease; text-align: left;
    }

    .grid-card:hover {
        border-color: var(--brand-color); /* Bordure orange au survol */
        transform: translateY(-3px);
        box-shadow: 0 10px 40px -10px rgba(0,0,0,0.5); /* Ombre profonde */
    }

    .icon-box {
        width: 48px; height: 48px; border-radius: 8px;
        display: flex; align-items: center; justify-content: center;
        font-size: 1.5rem; margin-bottom: 1.5rem;
    }

    /* Bo√Æte orange sombre pour que √ßa ne pique pas les yeux */
    .orange-box {
        background-color: rgba(249, 115, 22, 0.1); /* Orange transparent */
        color: #fb923c; /* Orange clair */
        border: 1px solid rgba(249, 115, 22, 0.2);
    }

    .grid-card h3 { font-size: 1.25rem; font-weight: 600; margin-bottom: 0.5rem; color: #fff; }
    .grid-card p { font-size: 0.95rem; color: #888; margin: 0; line-height: 1.6; }

    @media (max-width: 768px) {
        h1 { font-size: 3rem; }
        .grid-wrapper { grid-template-columns: 1fr; }
        .actions { flex-direction: column; width: 100%; }
        .btn-geist-primary, .btn-geist-secondary { width: 100%; justify-content: center; }
    }
    @media (max-width: 768px) {
    
    /* ... autres styles ... */

    /* La div qui contient les boutons */
    .actions { 
        flex-direction: column; 
        
        /* FIX 1 : On donne une taille maximale pour √©viter que ce soit trop large */
        max-width: 320px; 
        
        width: 90%; /* Pour qu'il prenne au moins 90% si l'√©cran est tr√®s petit */
        margin: 0 auto; /* Assure le centrage */
        gap: 0.8rem;
    }
    
    /* Les boutons eux-m√™mes */
    .btn-geist-primary, .btn-geist-secondary {
        width: 100%;
        justify-content: center;
    }

    /* FIX 2 : On r√©duit le padding global pour les tr√®s petits √©crans */
    main { padding: 1rem; } 
}
</style>