---
// 1. On importe notre nouveau Layout
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Accueil">
    
    <section class="hero">
        <h1>Un site web qui fonctionne. Simplement.</h1>
        <p>
            J'aide les TPE, artisans et PME à faire du web un allié fiable, 
            sans jargon technique ni promesses exagérées.
        </p>
        <a href="/mon-approche" class="cta-button">
            Découvrir mon approche
        </a>
    </section>

</BaseLayout>


<style>
    .hero {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 60vh;
        text-align: center;
    }

    .hero h1 {
        font-size: 2.8rem;
        font-weight: 700;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero p {
        font-size: 1.2rem;
        color: #495057;
        max-width: 600px;
        margin-bottom: 2rem;
    }

    .cta-button {
        font-size: 1rem;
        font-weight: 600;
        color: #ffffff;
        background-color: #007bff;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        transition: background-color 0.2s ease;
    }

    .cta-button:hover {
        background-color: #0056b3;
    }
</style>