---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
    <div class="contact-wrapper">
        <h1>Discutons de votre projet.</h1>
        <p class="subtitle">
            Que vous ayez une idée précise ou juste besoin d'un premier avis, 
            laissez-moi un message. Je réponds personnellement et rapidement, 
            sans engagement.
        </p>

        <form 
          class="contact-form" 
          action="https://formspree.io/f/[VOTRE_ID_FORMSPREE]" 
          method="POST"
        >
            <div class="form-group">
                <label for="name">Votre nom</label>
                <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
                <label for="email">Votre email</label>
                <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
                <label for="message">Votre message</label>
                <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="cta-button">Envoyer le message</button>
        </form>
    </div>
</BaseLayout>

<style>
    .contact-wrapper {
        max-width: 650px; /* Limite la largeur du formulaire */
        margin: 0 auto; /* Centre le bloc */
        text-align: center;
    }

    .subtitle {
        font-size: 1.15rem;
        color: #495057;
        margin-bottom: 3rem;
    }

    .contact-form {
        display: flex;
        flex-direction: column;
        text-align: left; /* Aligne les labels à gauche */
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.8rem 1rem;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        font-size: 1rem;
        font-family: inherit; /* Utilise la même police que le site */
    }

    .form-group textarea {
        resize: vertical; /* Permet de redimensionner en hauteur */
    }

    .cta-button {
        /* On réutilise le style de notre bouton principal */
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
        background-color: #007bff;
        text-decoration: none;
        padding: 0.9rem 2rem;
        border-radius: 8px;
        border: none; /* Important pour un <button> */
        cursor: pointer;
        transition: background-color 0.2s ease;
        align-self: center; /* Centre le bouton */
        margin-top: 1rem;
    }

    .cta-button:hover {
        background-color: #0056b3;
    }
</style>