---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact">
    <div class="contact-wrapper">
        <h1>Discutons de votre projet.</h1>
        <p class="subtitle">
            Que vous ayez une idée précise ou juste besoin d'un premier avis, 
            laissez-moi un message. Je réponds personnellement et rapidement, 
            sans engagement.
        </p>

        <form 
          class="contact-form" 
          action="https://formspree.io/f/mblwddep" 
          method="POST"
        >
            <div class="form-group">
                <label for="name">Votre nom</label>
                <input type="text" id="name" name="name" required />
            </div>

            <div class="form-group">
                <label for="email">Votre email</label>
                <input type="email" id="email" name="email" required />
            </div>

            <div class="form-group">
                <label for="message">Votre message</label>
                <textarea id="message" name="message" rows="6" required></textarea>
            </div>

            <button type="submit" class="cta-button">Envoyer le message</button>
        </form>
    </div>
</BaseLayout>

<style>
    .contact-wrapper {
        max-width: 600px;
        margin: 4rem auto 0;
        /* On peut encadrer le formulaire dans une carte subtile */
        background: var(--bg-card);
        padding: 3rem;
        border-radius: 12px;
        border: 1px solid var(--border-subtle);
    }

    h1 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .subtitle {
        text-align: center;
        font-size: 1.1rem;
        color: var(--text-muted);
        margin-bottom: 3rem;
    }

    .contact-form {
        display: flex; flex-direction: column;
    }

    .form-group { margin-bottom: 1.5rem; }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        font-size: 0.9rem;
        color: #ccc;
    }

    /* STYLE DES CHAMPS (INPUTS) */
    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.8rem 1rem;
        
        /* Fond sombre transparent */
        background-color: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-subtle);
        
        border-radius: 6px;
        font-size: 1rem;
        font-family: inherit;
        color: #fff; /* Texte blanc quand on tape */
        transition: all 0.2s ease;
    }

    .form-group textarea { resize: vertical; min-height: 120px; }

    /* Effet Focus : Bordure Orange + Fond légèrement plus clair */
    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--brand-color);
        background-color: rgba(255, 255, 255, 0.05);
        box-shadow: 0 0 0 4px rgba(249, 115, 22, 0.1); /* Petit halo orange */
    }

    .cta-button {
        font-size: 1rem; font-weight: 600;
        color: #000; /* Texte noir */
        background-color: #fff; /* Fond blanc */
        padding: 0.9rem 2rem;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        align-self: flex-start; /* Aligne à gauche */
        width: 100%;
    }

    .cta-button:hover {
        background-color: #e5e5e5;
        transform: translateY(-1px);
    }
</style>